<div class="row">
  <div class="col-md-8">
    <h2>Running</h2>
    <table id="running" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Worker</th>
          <th>Tag</th>
          <th>Attempt</th>
          <th>Strand</th>
          <th>Runtime</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h2>Tags</h2>
    <table id="tags" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Tag</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Jobs List</h2>
  </div>
</div>

<div class="row">
  <div class="form-group">
    <div class="col-md-2">
      <select id="current_jobs_flavor" class="form-control">
        <option value="current">Current</option>
        <option value="future">Future</option>
        <option value="failed">Failed</option>
        <option value="id" data-requires-search="true">ID</option>
        <option value="strand" data-requires-search="true">Strand</option>
        <option value="tag" data-requires-search="true">Tag</option>
      </select>
    </div>
    <div class="col-md-3">
      <!-- this inline style makes me sad but doing it in the stylesheet seems to break bootstrap -->
      <div class="input-group" id="job_search" style="display: none;">
        <input type="text" class="form-control" id="jobs_search_term" placeholder="">
        <span class="input-group-btn">
          <a href="" class="btn btn-default refresh_jobs_link" aria-label="Run Search">
            Filter <span class="glyphicon glyphicon-filter"></span>
          </a>
        </span>
      </div>
    </div>
    <div class="col-md-<%= allow_update ? 2 : 6 %>">
    </div>
    <div class="col-md-1">
      <a href="" class="btn btn-default pull-right refresh_jobs_link" aria-label="Refresh Jobs Table">
        <span class="glyphicon glyphicon-refresh"></span> Refresh
      </a>
    </div>
    <% if allow_update %>
    <div class="col-md-4">
      <span>With selection: </span>
      <br/>
      <a href="" class="btn btn-default hold_selection_link" aria-label="Hold Selected Jobs">
        <span class="glyphicon glyphicon-pause"></span> Hold
      </a>
      <a href="" class="btn btn-default unhold_selection_link" aria-label="Un-hold Selected Jobs">
        <span class="glyphicon glyphicon-play"></span> Un-Hold
      </a>
      <a href="" class="btn btn-default delete_selection_link" aria-label="Delete Selected Jobs">
        <span class="glyphicon glyphicon-trash"></span> Delete
      </a>
    </div>
    <% end %>
  </div>
</div>

<div class="row job-list-row">
  <div class="col-md-12">
    <table id="jobs" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tag</th>
          <th>Attempt</th>
          <th>Priority</th>
          <th>Strand</th>
          <th>Run At</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>
